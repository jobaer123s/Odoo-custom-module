        <field name="arch" type="xml">
            <!-- Filter by customer mobile -->
            <xpath expr="//search/field[@name='name']" position="before">
                <field name="mobile" string="Customer Mobile" filter_domain="[('mobile', 'ilike', self)]"/>
            </xpath>
        </field>
    </record>

