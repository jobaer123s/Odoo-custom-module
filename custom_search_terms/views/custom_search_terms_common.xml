                <field name="partner_id" string="Customer Mobile" filter_domain="[('partner_id.mobile', 'ilike', self)]"/>
            </xpath>
        </field>
    </record>

    <!-- Purchase -->
    <record id="view_custom_purchase_search" model="ir.ui.view">
        <field name="name">purchase.order.list.search</field>
