<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

	<!-- Customize User Menu -->
    <t t-extend="UserMenu">
	    <t t-jquery=".dropdown-menu" t-operation="replace">
			<ul class="dropdown-menu">
				<li><a role="menuitem" href="#" data-menu="shortcuts" class="dropdown-item d-none d-md-inline-block">Shortcuts</a></li>
				<div role="separator" class="dropdown-divider"/>
				<li><a href="#" data-menu="logout" class="dropdown-item">Log out</a></li>
			</ul>
		</t>
	</t>

   <!-- Customize Enterprise Upgrade Section -->
	<t t-extend="EnterpriseUpgrade">
		<t t-jquery=".row" t-operation="replace">
			<div class="row" role="status">
				<div class="col-6">
                        Get this feature and much more with Ogroni!
                        <ul class="list-unstyled">
                            <li><i class="fa fa-check"></i> Access to all Enterprise Apps</li>
                            <li><i class="fa fa-check"></i> New design</li>
                            <li><i class="fa fa-check"></i> Mobile support</li>
                            <li><i class="fa fa-check"></i> Upgrade to future versions</li>
                            <li><i class="fa fa-check"></i> Bugfixes guarantee</li>
                            <li><a href="http://www.ogroni.net" target="_blank"><i class="fa fa-plus"></i> And more</a></li>
                        </ul>
				</div>
				<div class="col-6">
                        <img class="img-fluid" t-att-src='_s + "/web/static/src/img/enterprise_upgrade.jpg"' draggable="false" alt="Upgrade to enterprise"/>
				</div>
			</div>
		</t>
	</t>

</templates>

