<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="sales_pdf_report">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <style type="text/css">
                        th{
                            background: #90ee90;
                            text-align: center;
                        }

                        tr:nth-child(even) {
                            background-color: #dddddd;
                        }

                        h2 {
                            color:teal;
                            text-align:center !important;
                        }

                        .total-row{
                            background-color: #ffffff !important;
                            text-align: center !important;
                            border: 1px solid #000; !important
                        }


                    </style>

                    <div class="oe_structure"/>

                    <div class="row">
                        <div class="col-lg-12">
                            <h2 style="color: #000">Sales Report: (From: <t t-esc="from_date"/> To: <t t-esc="to_date"/>)</h2>
                        </div>
                    </div>
                    <br/>
                    <div class="row">
                        <table class="table">
                            <thead >
                                <tr>
                                    <th style="background-color: #FFFF00 !important" rowspan="2" class="align-middle"><strong>Customer Name</strong></th>
                                    <th style="background-color: #FFFF00 !important" t-att-colspan="prod_len" class="align-middle"><strong>Products</strong></th>

                                    <th style="background-color: #FFFF00 !important" rowspan="2" class="align-middle" ><strong>Total Sales </strong></th>
                                    <th style="background-color: #FFFF00 !important" rowspan="2" class="align-middle" ><strong>Total Collections </strong></th>
                                    <th style="background-color: #FFFF00 !important" rowspan="2" class="align-middle" ><strong>Current Dues </strong></th>
                                    <th style="background-color: #FFFF00 !important" rowspan="2" class="align-middle" ><strong>Previous Dues </strong></th>
                                    <th style="background-color: #FFFF00 !important" rowspan="2" class="align-middle" ><strong>Total Dues </strong></th>
                                </tr>
                                <tr>
                                    <t t-foreach="products" t-as="prod">
                                        <th style="background-color: #FFFF00 !important" class="align-middle">
                                            <strong><t t-esc="prod"/></strong>
                                        </th>
                                    </t>
                                </tr>
                            </thead>
                            <tbody>
<!--                                <tr>-->
<!--                                    <td class="text-right margin-auto" style="border: 1px solid #000;" t-att-colspan="prod_len+4">-->
<!--                                        <strong>Previous Due: <t t-esc="before_due"/> </strong>-->
<!--                                    </td>-->
<!--                                </tr>-->

                                    <t t-foreach="csr" t-as="o">
                                        <tr style="border: 1px solid #000;">
                                            <td class="text-center" >
                                               <t t-esc="o['name']"/>
                                            </td>
                                            <t t-foreach="o['quantity']" t-as="q">
                                                <td class="text-center" >
                                                    <strong><t t-esc="q"/></strong>
                                                </td>
                                            </t>
                                            <td class="text-center">
                                               <t t-esc="o['amount']"/>
                                            </td>
                                            <td class="text-center">
                                               <t t-esc="o['payment']"/>
                                            </td>
                                            <td class="text-center">
                                               <t t-esc="o['current_due']"/>
                                            </td>
                                            <td class="text-center">
                                               <t t-esc="o['previous_due']"/>
                                            </td>
                                            <td class="text-center">
                                               <t t-esc="o['total_due']"/>
                                            </td>
                                        </tr>
                                    </t>

                                <tr class="total-row">
                                    <td class="text-center"><strong>Total: </strong></td>
                                    <t t-foreach="total_quantity_list" t-as="tq">
                                        <td class="text-center" >
                                            <strong><t t-esc="tq"/></strong>
                                        </td>
                                    </t>
                                    <td><strong><t t-esc="total_amount"/></strong></td>
                                    <td><strong><t t-esc="total_payment"/></strong></td>
                                    <td><strong><t t-esc="total_current_due"/></strong></td>
                                    <td><strong><t t-esc="total_previous_due"/></strong></td>
                                    <td><strong><t t-esc="total_dues"/></strong></td>
                                </tr>


                            </tbody>
                        </table>

                    </div>
                </div>
            </t>
        </t>
    </template>

</odoo>